{
    "refresh_mills": 500,
    "handlers": [
        {
            "type": "Numbers",
            "id": "max_num",
            "regex": ".*: (\\d+)",
            "params": {
                "name": "Max Number",
                "method": "max"
            }
        },
        {
            "type": "Numbers",
            "id": "last_num",
            "regex": ".*: (\\d+)",
            "params": {
                "name": "Last Number",
                "method": "latest"
            }
        },
        {
            "type": "Numbers",
            "id": "avg",
            "regex": ".*: (\\d+)",
            "params": {
                "name": "Avarage",
                "method": "avg"
            }
        },
        {
            "type": "Numbers",
            "id": "sum",
            "regex": ".*: (\\d+)",
            "params": {
                "name": "Sum",
                "method": "sum"
            }
        },
        {
            "type": "Counter",
            "id": "count",
            "regex": ".*: 1\\d?",
            "params": {
                "name": "Numbers starting with 1"
            }
        },
        {
            "type": "Graph",
            "id": "graph",
            "regex": ".*: (\\d+)",
            "params": {
                "name": "Graph",
                "length": 100,
                "height": 15
            }
        }
    ],
    "layouts": [
        {
            "type": "Pipe"
        },
        {
            "type": "Line",
            "params": {
                "width": 100
            },
            "handlers": [
                {
                    "id": "max_num"
                },
                {
                    "id": "last_num"
                },
                {
                    "id": "avg"
                },
                {
                    "id": "sum"
                }
            ]
        },
        {
            "type": "Line",
            "params": {
                "width": 100
            },
            "handlers": [
                {
                    "id": "count"
                }
            ]
        },
        {
            "type": "Chunk",            
            "handlers": [
                {
                    "id": "graph"
                }
            ]
        }
    ]
}